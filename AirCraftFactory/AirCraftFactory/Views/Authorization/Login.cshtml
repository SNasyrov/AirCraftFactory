@model AirCraftFactory.Models.User
@{
    ViewBag.Title = "Добавление продукта";
}

@if (ViewBag.ErrorMessage != null)
{    <span class="text-danger">@ViewBag.ErrorMessage</span>
}

<div class="col-md-12">
    <form asp-action="Login" asp-controller="Authorization">
        <div class="form-group col-md-6">
            <label asp-for="Login" class="control-label">Login:</label>
            <input type="text" asp-for="Login" class="form-control" />
            <span asp-validation-for="Login" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Password">Password:</label>
            <input type="text" asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Войти" class="btn btn-outline-success" />
        </div>
    </form>
</div>